    </div>
    <div class="single-product-slider" style="margin-top: 150px;">
        <div class="container">
            <section id="sliderSection">
                <div class="row">
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <div class="slick_slider">
                            <%for(var j =0;j < slide.length;j++) { %>
                            <div class="single_iteam">
                                <a href="/noidung/<%= slide[j]['tintuc_id'] %>">
                                    <img src="../hinhanh/baiviet/<%= slide[j]['hinhanh'] %>" alt="">
                                </a>
                                <div class="slider_article">
                                    <h2><a class="slider_tittle" href="/noidung/<%= slide[j]['tintuc_id'] %>">
                                            <%= slide[j]['tieude'] %></a>
                                    </h2>
                                </div>
                            </div>
                            <% }  %>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="latest_post">
                            <div class="latest_post_container">
                                <h4
                                    style="background: linear-gradient(to right, #367bff 0%, #28bdf8 100%); border-radius: 16px; padding: 15px; font-weight: bold; color: white; box-shadow: 0 9px 37px -8px rgba(40, 189, 248, 2.4);">
                                    Tin khác</h4>
                                <div id="prev-button"><i class="fa fa-chevron-up"></i></div>
                                <ul class="latest_postnav">
                                    <%for(var o =0 ; o < random.length;o++) { %>
                                    <li>
                                        <div class="media"> <a href="/noidung/<%=random[o]['tintuc_id']%>" class="media-left">
                                                <img alt="" src="../hinhanh/baiviet/<%= random[o]['hinhanh'] %>"> </a>
                                            <div class="media-body"> <a href="/noidung/<%=random[o]['tintuc_id']%>"
                                                    class="catg_title"><%= random[o]['tieude'] %> </a>
                                            </div>
                                        </div>
                                    </li>
                                    <% } %>
                                </ul>
                                <div id="next-button"><i class="fa  fa-chevron-down"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="row" style="float: left;">
                <div class="info">
                    <h3><strong>Tin tức</strong></h3>
                    <hr style="border-top: 1px solid #8c8b8b;">
                    <div class="container">
                        <div class="row row-eq-height">
                            <!-- Info Box -->
                            <% for(var i = 0; i < thu.length;i++) { %>
                            <div class="col-lg-3 col-md-3 col-sm-3">
                                <a href="/noidung/<%=thu[i]['tintuc_id']%>">
                                    <div class="info_box">
                                        <div class="info_image"><img src="../hinhanh/baiviet/<%= thu[i]['hinhanh'] %>">
                                        </div>
                                        <div class="info_content">
                                            <div class="info_title"><%= thu[i]['tieude'] %></div>
                                            <div class="info_text" id="shownd"></div>
                                            <div class="button info_button"><a href="/noidung/<%=thu[i]['tintuc_id']%>"><span>read more</span><span>read
                                                        more</span></a></div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
